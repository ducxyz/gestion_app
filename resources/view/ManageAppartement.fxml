<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AppartementController">
    <stylesheets>
        <URL value="@../style.css" />
    </stylesheets>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="header-label" text="Liste des Appartements" />

    <HBox alignment="CENTER_LEFT" spacing="15.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">

        <Label style="-fx-font-weight: bold;" text="Rechercher :" />
        <TextField fx:id="txtSearch" prefWidth="200.0" promptText="Par numéro (ex: A101)..." />

        <Label style="-fx-font-weight: bold;" text="Filtrer par statut :" />
        <ComboBox fx:id="cbFilterStatut" prefWidth="150.0" promptText="Tous" />

        <VBox HBox.hgrow="ALWAYS" />

        <Button onAction="#handleAdd" styleClass="button, btn-success" text="Ajouter" />
        <Button onAction="#handleEdit" styleClass="button, btn-primary" text="Modifier" />
        <Button onAction="#handleDelete" styleClass="button, btn-danger" text="Supprimer" />
    </HBox>

    <TableView fx:id="tableAppartement" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="colNumero" prefWidth="100.0" text="Numéro" />
            <TableColumn fx:id="colSurface" prefWidth="100.0" text="Surface (m²)" />
            <TableColumn fx:id="colStatut" prefWidth="100.0" text="Statut" />
            <TableColumn fx:id="colDesc" prefWidth="250.0" text="Description" />
        </columns>
    </TableView>
</VBox>