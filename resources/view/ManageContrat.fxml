<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="15.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ContratController">
    <stylesheets>
        <URL value="@../style.css" />
    </stylesheets>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Liste des Contrats de Location" styleClass="header-label" />

    <HBox spacing="10.0">
        <Button text="Nouveau Contrat" onAction="#handleAdd" styleClass="button, btn-success"/>
        <Button text="Terminer le contrat" onAction="#handleTerminate" styleClass="button, btn-warning" />
        <Button text="Supprimer" onAction="#handleDelete" styleClass="button, btn-danger"/>
    </HBox>

    <TableView fx:id="tableContrat" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="50.0" />
            <TableColumn fx:id="colAppart" text="Appartement" prefWidth="100.0" />
            <TableColumn fx:id="colResident" text="Résident" prefWidth="150.0" />
            <TableColumn fx:id="colDebut" text="Date de début" prefWidth="100.0" />
            <TableColumn fx:id="colFin" text="Date de fin" prefWidth="100.0" />
            <TableColumn fx:id="colLoyer" text="Loyer" prefWidth="100.0" />
            <TableColumn fx:id="colStatut" text="Statut" prefWidth="100.0" />
        </columns>
    </TableView>
</VBox>