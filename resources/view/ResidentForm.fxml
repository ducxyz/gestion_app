<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ResidentFormController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Information de Résident">
        <font><Font name="System Bold" size="16.0" /></font>
    </Label>

    <Label text="Nom:" />
    <TextField fx:id="txtNom" />

    <Label text="Prénom:" />
    <TextField fx:id="txtPrenom" />

    <Label text="Identité :" />
    <TextField fx:id="txtCMND" />

    <Label text="Numéro:" />
    <TextField fx:id="txtPhone" />

    <Label text="Date de naissance:" />
    <DatePicker fx:id="dpDate" maxWidth="1.7976931348623157E308" />

    <Button text="Mise à jour" onAction="#handleSave" maxWidth="1.7976931348623157E308" style="-fx-background-color: #2196F3; -fx-text-fill: white;">
        <font><Font name="System Bold" size="14.0" /></font>
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
    </Button>
</VBox>