<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserController">
    <stylesheets>
        <URL value="@../style.css" />
    </stylesheets>

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="ESPACE RÉSIDENT" styleClass="header-label" />

    <VBox spacing="10.0" styleClass="card">
        <Label text="Informations personnelles" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #1a252f;" />

        <Label fx:id="lblWelcome" text="Bienvenue : ..." />

        <Label text="Téléphone :" />
        <TextField fx:id="txtPhone" promptText="Votre numéro de téléphone" />

        <Button text="Mettre à jour" onAction="#handleUpdateContact" styleClass="button, btn-primary" maxWidth="200" />
    </VBox>

    <Label text="Mes Locations (Contrats actifs)" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1a252f;" />

    <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-background: transparent; -fx-border-color: transparent;" VBox.vgrow="ALWAYS">
        <content>
            <VBox fx:id="contractsContainer" spacing="15.0" style="-fx-padding: 5;">
            </VBox>
        </content>
    </ScrollPane>

    <Button text="Déconnexion" onAction="#handleLogout" styleClass="button, btn-danger" />
</VBox>