<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainLayout" prefHeight="650.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AdminController">
    <stylesheets>
        <URL value="@../style.css" />
    </stylesheets>

    <left>
        <VBox prefWidth="220.0" styleClass="sidebar" spacing="0" BorderPane.alignment="CENTER">
            <VBox alignment="CENTER" spacing="5" style="-fx-padding: 30 0 30 0;">
                <Label text="Maison de" textFill="WHITE">
                    <font><Font size="14.0" /></font>
                </Label>
                <Label text="L'AMOUR" textFill="WHITE">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>
            </VBox>

            <Button maxWidth="Infinity" onAction="#showComptes" text="Comptes" />
            <Button maxWidth="Infinity" onAction="#showAppartements" text="Appartements" />
            <Button maxWidth="Infinity" onAction="#showResidents" text="Résidents" />
            <Button maxWidth="Infinity" onAction="#showContrats" text="Contrats" />

            <VBox VBox.vgrow="ALWAYS" />

            <Button maxWidth="Infinity" onAction="#handleLogout" styleClass="btn-logout" text="Déconnexion" />
        </VBox>
    </left>

    <center>
        <BorderPane fx:id="mainContent" style="-fx-padding: 20;">
            <center>
                <VBox alignment="CENTER" spacing="10">
                    <Label styleClass="header-label" text="Bienvenue Administrateur !" />
                    <Label text="Sélectionnez une fonction dans le menu à gauche pour commencer." textFill="#7f8c8d" />
                </VBox>
            </center>
        </BorderPane>
    </center>
</BorderPane>